{
  "name": "scriptcaddy",
  "version": "0.0.3",
  "description": "A developer's handy toolchest",
  "main": "src/main/index.ts",
  "scripts": {
    "build": "parcel build src/renderer/index.html --public-url ./ --out-dir build",
    "dist": "electron-builder --publish always -c.snap.publish=github",
    "release": "npm run build && npm run dist",
    "package": "npm run build && electron-builder",
    "react-start-prod": "parcel -p 3000 src/renderer/index.html --public-url ./ --out-dir build",
    "react-start-dev": "parcel -p 3000 src/renderer/index.html --out-dir build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start-dev\" \"wait-on http://localhost:3000 && electron . \"",
    "test": "jest",
    "test:lint": "eslint --ignore-path .gitignore ."
  },
  "build": {
    "extends": null,
    "appId": "com.scriptcaddy.app",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "app_home/**/*",
      "src/common/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "build/**/*"
    ],
    "extraFiles": [
      "extra/scriptHook.js"
    ]
  },
  "repository": "https://github.com/frank-weindel/project-x",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "babel": {
    "presets": [
      [
        "react-app",
        {
          "absoluteRuntime": false
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint"
    }
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "themes",
        "staticOutDir": "themes"
      }
    ]
  },
  "author": "Frank Weindel",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^26.0.9",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-preset-react-app": "^9.1.2",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "jest-transform-stub": "^2.0.0",
    "less": "^3.11.3",
    "lint-staged": "^10.5.3",
    "parcel": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "typescript": "^4.1.3",
    "wait-on": "^5.0.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.6",
    "@typescript-eslint/parser": "^4.11.0",
    "ace-builds": "^1.4.11",
    "classnames": "^2.2.6",
    "electron-is-dev": "^1.2.0",
    "node-watch": "^0.6.4",
    "postcss-modules": "^2.0.0",
    "prop-types": "^15.7.2",
    "re-reselect": "^4.0.0",
    "react": "^16.13.1",
    "react-ace": "^9.0.0",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-scripts": "^3.4.1",
    "semantic-ui-css": "^2.4.1"
  }
}
